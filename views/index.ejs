<%- include('partials/header.ejs'); -%>


      <h2>Here's a list of books I've read so far </h2>
      
      <div class="container">
        <ul>

          <%  for(let i =0; i< books.length ; i++ ){%>

              <li>



                <div class="card mb-3 "  >
                  <div class="row g-0 ">
                    <div class="col-md-3 ">
                      <img src = "https://covers.openlibrary.org/b/isbn/<%= books[i].isbn%>-L.jpg" class="img-fluid rounded-start" />

                    </div>
                    <div class="col-md-8">
                      <div class="card-body">
                        <h2 class="card-title"><%= books[i].title %> </h2>
                        <p class="card-text"><small class="text-body-secondary">Read On <%= books[i].readdate %> </small></p>

                        <p class="card-text"><%= books[i].reviews %></p>

                        <h3> Rating :  <%= books[i].rating %>  /5</h3>

                        <div>

                          <div>

                             <a href = "/edit?bname=<%= books[i].id %>"  class = "btn btn-primary" name = "<%= books[i].title %>">Edit Button  </a>
                             <a href = "/delete?bid=<%= books[i].id %>"  class = "btn btn-danger" name = "<%= books[i].id %>">Delete Button  </a>

                            


                          </div>
                          

                        </div>
                      
                      </div>
                    </div>
                  </div>
                </div>





               




              </li>
              <% } %>
          
        
        </ul>
      </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>


  
</body>
</html>